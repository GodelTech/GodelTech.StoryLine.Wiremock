<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
	<TargetFrameworks>netstandard2.0</TargetFrameworks>
	<PackageId>GodelTech.StoryLine.Wiremock</PackageId>
	<PackageTags>test testing tdd framework fluent assert core .netcore netcore microservice wiremock</PackageTags>
	<Copyright>Godel Technologies Europe</Copyright>
	<Product>Integration Tests Framework</Product>
	<Company>Godel Technologies Europe</Company>
	<Authors>Andrei Salanoi</Authors>
	<RepositoryUrl>https://github.com/GodelTech/GodelTech.StoryLine.Wiremock</RepositoryUrl>
	<PackageIconUrl>https://www.gravatar.com/avatar/839234621070de51e7b9cabd5ceee8fe?s=64</PackageIconUrl>
	<VersionPrefix>0.0.1</VersionPrefix>

	<!-- SonarQube needs this -->
	<ProjectGuid>{00000000-0000-0000-0000-000000000001}</ProjectGuid>

	<!-- XML documentation -->
	<GenerateDocumentationFile>true</GenerateDocumentationFile>

	<!-- Source Link needs this -->
	<PublishRepositoryUrl>true</PublishRepositoryUrl>
	<EmbedUntrackedSources>true</EmbedUntrackedSources>
	<IncludeSymbols>true</IncludeSymbols>
	<SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
    <PackageReference Include="GodelTech.StoryLine" Version="1.0.0" />

	<!-- Source Link needs this -->
	<PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0" PrivateAssets="All" />
  </ItemGroup>

</Project>